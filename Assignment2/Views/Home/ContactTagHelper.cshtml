@model Assignment2.ContactModel
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <h2>Contact Me</h2>

<div class="col">
    <form method="post">
        <div class="row">
            <div class="row-2 col-sm-4">
                <label asp-for="FirstName"></label>
                <input class="form-control" asp-for="FirstName" />
            </div>
            <div class="row-2 col-sm-4">
                <label asp-for="LastName"></label>
                <input class="form-control" asp-for="LastName" />
            </div>    
        </div>
        <div class="row">
            <div class="row-2 col-sm-9">
                <label asp-for="Address"></label>
                <input class="form-control" asp-for="Address" />
            </div>    
        </div>
        <div class="row">
            <div class="row-2 col-sm-3">
                <label asp-for="City"></label>
                <input class="form-control" asp-for="City" />
            </div>
            <div class="row-2 col-sm-3">
                <label asp-for="State"></label>
                <input class="form-control" asp-for="State" />
            </div>
            <div class="row-3 col-sm-3">
                <label asp-for="Zip"></label>
                <input class="form-control" asp-for="Zip" />
            </div>
        </div>
        <button asp-controller="Home" asp-action="Contact" class="btn btn-primary">Submit</button>
    </form>
</div>