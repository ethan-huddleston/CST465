@model Validation.RegistrationFormModel

<h1>Registration</h1>
<div>
</div>
<form method="post">
    <div class="row">
        <div class="form-group col-12 col-sm-6">
            <label asp-for="FirstName">First Name</label>
            <input class="form-control" asp-for="FirstName" />
            <span asp-validation-for="@Model.FirstName"></span>
        </div>
        <div class="form-group col-12 col-sm-6">
            <label asp-for="LastName"></label>
            <input class="form-control" asp-for="LastName" />
            <span asp-validation-for="@Model.LastName"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="EmailAddress"></label>
        <input class="form-control" asp-for="EmailAddress" />
        <span asp-validation-for="@Model.EmailAddress"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input  class="form-control" asp-for="PhoneNumber" />
        <span asp-validation-for="@Model.PhoneNumber"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Address"></label>
        <input class="form-control"  asp-for="Address" />
        
    </div>
    <div class="row">
        <div class="form-group col-12 col-sm-4">
            <label asp-for="City"></label>
            <input class="form-control" asp-for="City" />
            
        </div>
        <div class="form-group col-12 col-sm-4">
            <label asp-for="State"></label>
            <select asp-for="State" asp-items="@Model.StateList" class="form-select">
            </select>
            
        </div>
        <div class="form-group col-12 col-sm-4">
            <label asp-for="ZipCode"></label>
            <input class="form-control" asp-for="ZipCode" />
        </div>
    </div>
    <button asp-controller="Registration" asp-action="" class="btn btn-primary">Submit</button>
</form>